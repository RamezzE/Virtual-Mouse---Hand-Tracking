<GestureDetectionView>:
    size_hint: 1, 1
    id: layout

    CameraView:
        id: camera
        size_hint: 1, 0.9
        pos_hint: {'top': 1}

    CustomButton:
        size: 0, 0

    CustomButton:
        id: toggle_camera
        text: ''
        size_hint: None, None
        size: (root.parent.height / 25, root.parent.height / 25) if not root.show_loading_spinner else (0, 0)
        disabled: root.show_loading_spinner
        pos_hint: {'center_y': 0}
        x: layout.width - self.width * 1.5 - 10
        
        normal_image: root.icons['pause'] if camera.running else root.icons['play']
        pressed_image: root.icons['pause'] if camera.running else root.icons['play']

        on_release: camera.toggle_capture()

    Image:
        source: root.icons['video']
        size_hint: 0.2, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        opacity: 0 if camera.running else 1

    RotatingSpinner:
        id: spinner
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        opacity: 1 if root.show_loading_spinner else 0
        numLines: 3
        lineThickness: 2
        animationDuration: 3
        gap: 50
        color: 18/255, 18/255, 18/255, 0.87

    Label:
        id: status
        text: root.status
        font_name: root.fonts['poppins']['regular']
        size_hint: 0.3, 0.3
        pos_hint: {'center_x': 0.5, 'center_y': 0.22}
        opacity: 0 if camera.running else 1
        color: 18/255, 18/255, 18/255, 0.87
        font_size: 20

    Label:
        id: fps
        text: 'FPS: ' + str(root.current_fps)
        font_name: root.fonts['poppins']['semi_bold']
        size_hint: 0.3, 0.3
        y: toggle_camera.y
        x: 25
        text_size: self.size
        opacity: 1 if not root.show_loading_spinner else 0
        color: 1, 1, 1, 0.87
        font_size: root.height / 18
