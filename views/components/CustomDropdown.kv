<CustomDropdown>:
    Button:
        text: root.selected
        color: root.text_color
        size_hint: 1, None
        font_size: root.font_size
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        background_color: root.background_color
        background_normal: ''
        background_down: ''

        height: root.button_height

        on_release: root._open_dropdown()

    Image:
        source: app.icons['dropdown'] if not root.dropdown_open else app.icons['dropdown_up']
        size_hint: None, None
        size: app.height / 40, app.height / 40
        pos_hint: {'center_y': 0.5}
        x: root.parent.parent.width - self.width - 10

<OptionButton>:
    size_hint: None, None
    font_size: root.dropdown.font_size
    height: root.dropdown.options_height
    width: root.dropdown.button_width
    color: root.dropdown.text_color
    font_name: root.dropdown.font_name
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    background_color: root.dropdown.background_color if  not root.alternate_background else root.dropdown.alt_background_color
    background_normal: ''
    background_down: ''
    on_release: root.dropdown.dropdown.select(self.text)
