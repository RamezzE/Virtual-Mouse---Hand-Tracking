<HomeScreen>:
    FloatLayout:
        pos: root.pos
        size: root.size
        id: home

        canvas.before:
            Color:
                rgba: 18/255, 18/255, 18/255, 1
            Rectangle:
                pos: home.pos
                size: home.size

        Label:
            text: 'Virtual\nMouse'
            font_name: app.fonts['poppins']['bold']
            color: 1, 1, 1, 0.87
            font_size: root.height / 15
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}

        Label:
            text: 'Ditch your mouse and\n       use your hand'
            font_name: app.fonts['poppins']['light_italic']
            color: 1, 1, 1, 0.87
            font_size: root.height / 35
            size_hint: 0.7, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}

        CustomButton:
            text: 'Start'
            font_size: root.height / 25
            font_name: app.fonts['poppins']['medium']
            normal_text_color: 18/255, 18/255, 18/255, 1
            pressed_text_color: 1, 1, 1, 0.87
            size_hint: None, None
            size: root.height / 4.5,  root.height / 9
            
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            normal_image: app.paths['assets']['buttons']['normal']
            pressed_image: app.paths['assets']['buttons']['normal_pressed']

            on_release: root.switch_to_camera_screen()

        Image:
            source: app.icons['app_white']
            size_hint: None, None
            opacity: 0.95
            size: root.height / 8, root.height / 8
            pos_hint: {'center_x': 0.5, 'center_y': 0.825}