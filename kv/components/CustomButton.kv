<CustomButton>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5 if self.state == 'down' else 1
        Rectangle:
            texture: self.current_texture
            size: self.size if self.current_texture else (0, 0)
            pos: self.pos[0], self.pos[1] - self.size[1] * 0.05

    opacity: 1 if self.current_texture else 0
    valign: 'middle'
    halign: 'center'