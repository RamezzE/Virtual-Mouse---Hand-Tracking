<RowSpacer@Widget>:
    size_hint: None, 1
    width: 10

<SmallRowSpacer@Widget>:
    size_hint: None, 1
    width: 10


<RowLabel@Label>:
    color: 1, 1, 1, 0.87
    size_hint: 1, None
    pos_hint: {'center_y': 0.5}
    text_size: self.size[0], None    

<ChooseSettingButton>:
    size_hint: 0.5, 1
    background_normal: ''
    background_down: ''
    background_color: 0,0,0,0
    font_name: root.settings.fonts['poppins']['bold'] if root.settings.selected == self.text.lower() else root.settings.fonts['poppins']['medium']
    font_size: root.settings.height / 35 if root.settings.height / 35 > 20 else 20
    color: 1, 1, 1, 0.87
    on_release: root.settings.select(self.text.lower())

<DropdownRow>:
    size_hint_y: None
    height: root.settings.rowHeight
    orientation: 'horizontal'

    canvas.before:
        Color:
            rgba: 217/255, 217/255, 217/255, 0.08 if root.alternate_background else 0
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        RowSpacer:
    
        RowLabel:
            text: root.text
            font_name: root.settings.fonts['poppins']['regular']

        SmallRowSpacer:
            

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        CustomDropDown:
            id: dropdown
            font_name: root.settings.fonts['poppins']['regular']
            color: 1, 1, 1, 0.87
            size_hint: 1, 1

            button_width: self.parent.width
            button_height: self.parent.height
            options_height: self.parent.height/1.5

            selected: root.selected
            options: root.options
            
            background_color: (25/255,25/255,25/255, 1) if root.alternate_background else (18/255, 18/255, 18/255, 1)
            alt_background_color: (1/255,1/255,1/255, 1)

<OnOffRow>:
    size_hint_y: None
    height: root.settings.rowHeight
    orientation: 'horizontal'

    canvas.before:
        Color:
            rgba: 217/255, 217/255, 217/255, 0.08 if root.alternate_background else 0
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        RowSpacer:

        RowLabel:
            text: root.text
            font_name: root.settings.fonts['poppins']['regular']

        SmallRowSpacer:

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        Button:
            text: 'ON'
            color: 0, 0, 0, 1
            font_name: root.settings.fonts['poppins']['regular']
            size_hint: 0.5, 1
            background_normal: ''
            background_color: 185/255, 185/255, 185/255, 1
            background_down: ''

        Button:
            text: 'OFF'
            color: 0, 0, 0, 1
            font_name: root.settings.fonts['poppins']['regular']
            size_hint: 0.5, 1
            background_normal: ''
            background_color: 110/255, 110/255, 110/255, 1
            background_down: ''



<SliderRow>:
    size_hint_y: None
    height: root.settings.rowHeight
    orientation: 'horizontal'

    canvas.before:
        Color:
            rgba: 217/255, 217/255, 217/255, 0.08 if root.alternate_background else 0
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        RowSpacer:
    
        RowLabel:
            text: root.text + ' (' + str(root.value) + '%)' 
            font_name: root.settings.fonts['poppins']['regular']

        SmallRowSpacer:

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: 25/255, 25/255, 25/255, 1 if root.alternate_background else 0
            Rectangle:
                size: self.size
                pos: self.pos

        Slider:
            id: slider
            min: root.min
            max: root.max
            value: root.value
            step: 1
            size_hint: 1, 1
            pos_hint: {'center_y': 0.5}
            background_color: 185/255, 185/255, 185/255, 1
            value_track_color: 1, 1, 1, 0.87
            value_track_width: 2
            cursor_size: 20, 20
            on_value: root.on_value(int(self.value))

<GestureRow>:             
    size_hint: 1, None
    height: root.settings.gestureRowHeight
    spacing: 10
    orientation: 'horizontal'

    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 0.08) if root.alternate_background else (0, 0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 0.3, 1
        orientation: 'horizontal'
        
        Image:
            source: root.image_source
            size_hint: 1, 0.6
            text_size: self.size[0], None
            pos_hint: {'center_y': 0.5}

    BoxLayout:
        size_hint: 0.7, 1
        orientation: 'horizontal'

        CustomDropDown:
            id: dropdown
            font_name: root.settings.fonts['poppins']['regular']
            color: 1, 1, 1, 0.87
            size_hint: 1, 1

            button_width: self.parent.width
            button_height: self.parent.height
            options_height: self.parent.height/2.5

            options: root.settings.gesture_options
            
            background_color: (25/255,25/255,25/255, 1) if root.alternate_background else (18/255, 18/255, 18/255, 1)
            alt_background_color: (1/255,1/255,1/255, 1)
