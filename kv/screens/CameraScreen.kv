<CameraScreen>:
    FloatLayout:
        pos: root.pos
        size: root.size
        id: layout

        canvas.before:
            Color:
                rgba: 18/255, 18/255, 18/255, 1
            Rectangle:
                pos: layout.pos
                size: layout.size

        GestureControlPanel:
            id: GCP
            callback: root.updateLog
            size_hint: 1, 0.6
            pos_hint: {'center_y': 0.75}

        Label:
            text: 'Gesture Log:'
            font_name: root.fonts['poppins']['semi_bold']
            color: 1, 1, 1, 0.87
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.25, 'center_y': 0.45}
            font_size: 24

        Label:
            id: logsLabel
            text: root.logsLabelText
            font_name: root.fonts['poppins']['regular']
            color: 1, 1, 1, 0.87
            size_hint: 1, 0.3
            pos_hint: {'x':0.1, 'y': 0.1}
            font_size: 18
            text_size: self.size
            halign: 'left'
            valign: 'top'

        CustomButton:
            text: ''            
            size_hint: None, None
            size: 30, 30
            
            pos_hint: {'center_x': 0.9, 'center_y': 0.05}
            normal_image: root.icons['settings']
            pressed_image: root.icons['settings']

            on_release: root.openSettings()

        CustomButton:
            text: ''            
            size_hint: None, None
            size: 30, 30
            
            pos_hint: {'center_x': 0.8, 'center_y': 0.05}
            normal_image: root.icons['github']
            pressed_image: root.icons['github']

            # on_release: webbrowser.open('https://github.com/RamezzE/VirtualMouse-HandTracking')

        CustomButton:
            text: ''            
            size_hint: None, None
            size: 30, 30
            
            pos_hint: {'center_x': 0.1, 'center_y': 0.05}
            normal_image: root.icons['arrow']
            pressed_image: root.icons['arrow']

            on_release: root.openHome()