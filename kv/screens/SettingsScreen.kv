<SettingsScreen>:
    FloatLayout:
        pos: root.pos
        size: root.size
        id: layout

        canvas.before:
            Color:
                rgba: 18/255, 18/255, 18/255, 1
            Rectangle:
                pos: layout.pos
                size: layout.size

        CustomButton:
            size: 0, 0

        CustomButton:
            text: ''
            size_hint: None, None
            size: root.height / 25, root.height / 25
            pos_hint: {'center_y': 0.95}
            text_size: self.size

            x: 20

            normal_image: root.icons['arrow']
            pressed_image: root.icons['arrow']

            on_release: root.toCameraScreen()

        ############# Settings Options #############
        BoxLayout:
            id: settings_header
            size_hint: 0.8, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

        ############# Table 1 General Settings #############
        
        ScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            size_hint: (0.9, 0.6) if root.selected == 'general' else (0, 0)
            opacity: 1 if root.selected == 'general' else 0
            disabled: False if root.selected == 'general' else True  

            do_scroll_x: False
            do_scroll_y: True

            bar_width: 3
            bar_color: 1, 1, 1, 0.87
            bar_inactive_color: 1, 1, 1, 0.34

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: 10

                Label:
                    text: 'Camera Settings'
                    font_name: root.fonts['poppins']['semi_bold']
                    font_size: root.height / 40 if root.height / 40 > 18 else 18
                    color: 1, 1, 1, 0.87
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.size
                    x: 25

                ############# Camera Settings #############
                BoxLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                
                    ############# Row 1:
                    BoxLayout:
                        size_hint_y: None
                        height: root.rowHeight
                        spacing: 10
                        orientation: 'horizontal'

                        canvas.before:
                            Color:
                                rgba: 217/255, 217/255, 217/255, 0.08
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        BoxLayout:
                            size_hint: 0.5, 1
                            orientation: 'horizontal'
                            
                            Widget:
                                size_hint_x: 0.1

                            Label:
                                text: 'Capturing Cam'
                                font_name: root.fonts['poppins']['regular']
                                color: 1, 1, 1, 0.87
                                size_hint_x: 0.9
                                # text_size: self.size

                        BoxLayout:
                            size_hint: 0.5, 1
                            orientation: 'horizontal'

                            CustomDropDown:
                                selected: 'Front'
                                font_name: root.fonts['poppins']['regular']
                                color: 1, 1, 1, 0.87
                                size_hint: 1, 1
                                button_width: self.parent.width
                                button_height: self.parent.height
                                options: ['1', '2']
                                background_color: 25/255,25/255,25/255, 1

                    ############# Row 2:
                    BoxLayout:
                        size_hint_y: None
                        height: root.rowHeight
                        orientation: 'horizontal'

                        BoxLayout:
                            size_hint: 0.5, 1
                            orientation: 'horizontal'
                            
                            Widget:
                                size_hint_x: 0.1

                            Label:
                                text: 'Camera View'
                                font_name: root.fonts['poppins']['regular']
                                color: 1, 1, 1, 0.87
                                size_hint_x: 0.9
                                # text_size: self.size

                        BoxLayout:
                            size_hint: 0.5, 1
                            orientation: 'horizontal'

                            Button:
                                text: 'ON'
                                color: 0, 0, 0, 1
                                font_name: root.fonts['poppins']['regular']
                                size_hint: 0.5, 1
                                background_normal: ''
                                background_color: 185/255, 185/255, 185/255, 1
                                background_down: ''

                            Button:
                                text: 'OFF'
                                color: 0, 0, 0, 1
                                font_name: root.fonts['poppins']['regular']
                                size_hint: 0.5, 1
                                background_normal: ''
                                background_color: 110/255, 110/255, 110/255, 1
                                background_down: ''

                    Widget:
                        size_hint_y: None
                        height: root.rowHeight


        ############# Table 2 Gesture Settings #############    
        ScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint: (0.9, 0.7) if root.selected == 'gestures' else (0,0)
            opacity: 1 if root.selected == 'gestures' else 0
            disabled: False if root.selected == 'gestures' else True  

            do_scroll_x: False
            do_scroll_y: True

            bar_width: 3
            bar_color: 1, 1, 1, 0.87
            bar_inactive_color: 1, 1, 1, 0.34
        
            BoxLayout:
                id: gestures_table
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                orientation: 'vertical'


<ChooseSettingButton>:
    size_hint: 0.5, 1
    background_normal: ''
    background_down: ''
    background_color: 0,0,0,0
    font_name: root.settings.fonts['poppins']['bold'] if root.settings.selected == self.text.lower() else root.settings.fonts['poppins']['medium']
    font_size: root.settings.height / 35 if root.settings.height / 35 > 20 else 20
    color: 1, 1, 1, 0.87
    on_release: root.settings.select(self.text.lower())

<GestureRow>:             
    size_hint: 1, None
    height: root.settings.gestureRowHeight
    spacing: 10
    orientation: 'horizontal'

    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 0.08) if root.alternate_background else (0, 0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'
        
        Image:
            source: root.image_source
            size_hint: 1, 0.6
            text_size: self.size[0], None
            pos_hint: {'center_y': 0.5}

    BoxLayout:
        size_hint: 0.5, 1
        orientation: 'horizontal'

        CustomDropDown:
            id: dropdown
            font_name: root.settings.fonts['poppins']['regular']
            color: 1, 1, 1, 0.87
            size_hint: 1, 1

            button_width: self.parent.width
            button_height: self.parent.height
            options_height: self.parent.height/2

            options: root.settings.gesture_options
            
            background_color: (25/255,25/255,25/255, 1) if root.alternate_background else (18/255, 18/255, 18/255, 1)
            alt_background_color: (1/255,1/255,1/255, 1)
