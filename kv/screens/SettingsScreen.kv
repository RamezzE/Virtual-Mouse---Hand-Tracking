<SettingsScreen>:
    FloatLayout:
        pos: root.pos
        size: root.size
        id: layout

        canvas.before:
            Color:
                rgba: 18/255, 18/255, 18/255, 1
            Rectangle:
                pos: layout.pos
                size: layout.size

        CustomButton:
            size: 0, 0

        CustomButton:
            text: ''
            size_hint: None, None
            size: root.height / 25, root.height / 25
            pos_hint: {'center_y': 0.95}
            text_size: self.size

            x: 20

            normal_image: root.icons['arrow']
            pressed_image: root.icons['arrow']

            on_release: root.toCameraScreen()

        ############# Settings Options #############
        BoxLayout:
            id: settings_header
            size_hint: 0.8, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

        ############# General Settings #############
        ScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            size_hint: (0.9, 0.6) if root.selected == 'general' else (0, 0)
            opacity: 1 if root.selected == 'general' else 0
            disabled: False if root.selected == 'general' else True  

            do_scroll_x: False
            do_scroll_y: True

            bar_width: 3
            bar_color: 1, 1, 1, 0.87
            bar_inactive_color: 1, 1, 1, 0.34

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: 20

                ############# Camera Settings #############
                SettingsArea:

                    SettingName:
                        text: 'Camera Settings'
                        font_name: root.fonts['poppins']['semi_bold']
                        font_size: root.height / 40 if root.height / 40 > 18 else 18
                    
                    BoxLayout:
                        id: camera_settings
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'

                ############# Detection Settings #############
                SettingsArea:
                
                    SettingName:
                        text: 'Detection Settings'
                        font_name: root.fonts['poppins']['semi_bold']
                        font_size: root.height / 40 if root.height / 40 > 18 else 18
                    
                    BoxLayout:
                        id: detection_settings
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                    
        ############# Gesture Settings #############    
        ScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint: (0.9, 0.7) if root.selected == 'gestures' else (0,0)
            opacity: 1 if root.selected == 'gestures' else 0
            disabled: False if root.selected == 'gestures' else True  

            do_scroll_x: False
            do_scroll_y: True

            bar_width: 3
            bar_color: 1, 1, 1, 0.87
            bar_inactive_color: 1, 1, 1, 0.34
        
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                orientation: 'vertical'
                spacing: 10

                SettingName:
                    text: 'Gesture Mappings'
                    font_name: root.fonts['poppins']['semi_bold']
                    font_size: root.height / 40 if root.height / 40 > 18 else 18

                BoxLayout:
                    id: gestures_table
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    orientation: 'vertical'


<SettingsArea@BoxLayout>
    size_hint_y: None
    orientation: 'vertical'
    height: self.minimum_height
    spacing: 10

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            points: [self.x, self.y, self.x + self.width, self.y]


<SettingName@Label>:
    color: 1, 1, 1, 0.87
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.size
    x: 25